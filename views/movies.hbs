<h1>all movies page</h1>

{{#if user}}
<h3>Welcome {{user.username}}</h3>

<div class="logout-profile-buttons">
  <a href="/auth/logout">Log Out</a>
  <a href="/profile">My Profile</a>
</div>

<div class="allMovies">
  {{#each allMovies}}
  <div class="container-movies">
    <img src="{{this.coverPic}}" alt="movieCover">
    <h3>{{this.title}}</h3>
    <a href="/movies/{{this.id}}">View More</a>
  </div>
  {{/each}}

</div>

{{/if}}