{{#with user}}

<div class="background-image">

  <div class="edit-profile-pic-container">

    <img class="profileImage" src="{{profilePic}}">
    <h3>Welcome {{username}}</h3>

    <div class="edit-profile-pic-form">

      <form method="POST" action="/editProfilePic" enctype="multipart/form-data">

        <p>Change your profile pic:</p>
        <input class="input-file" type="file" name="profilePic" value={{profilePic}}>
        <button type="submit">Change your profile pic</button>

      </form>

    </div>

    <div class="edit-profile-pic-buttons">

      <a href="/profile">Go back to your profile</a>
      <a href="/movies">Go to movies</a>

    </div>

  </div>

</div>

{{/with}}