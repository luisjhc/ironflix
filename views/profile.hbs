{{#with user}}

<div class="background-image">

  <div class="profile-container">

    <img class="profileImage" src="{{profilePic}}">
    <h3>Welcome {{username}}</h3>

    {{#if shortBio}}

    <p>
      {{shortBio}}
    </p>

    <div class="profile-buttons">

      <a href="/profile/edit">Edit your profile</a>
      <a href="/">Go to movies</a>

      {{/if}}
      {{#if prefersDarkMode}}
      <a href="/profile/dark-mode">Set light mode</a>
      {{else}}
      <a href="/profile/dark-mode">Set dark mode</a>
      {{/if}}

    </div>

  </div>

</div>

{{/with}}