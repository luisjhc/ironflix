{{#with user}}

<div class="background-image">

  <div class="profile-container">

    <img class="profileImage" src="{{profilePic}}">
    <h3 class="profile-heading">Welcome {{username}}</h3>

    {{#if shortBio}}

    <p>
      {{shortBio}}
    </p>

    {{/if}}

    <h3>My list:</h3>
    {{#each favouriteList}}
    <li>
      <a href="/movies/{{this._id}}">{{this.title}}</a>
    </li>
    {{/each}}

    <div class="profile-buttons">

      <a href="/profile/edit">Edit your profile</a>
      <a href="/">All Movies</a>


      {{#if prefersDarkMode}}
      <a href="/profile/dark-mode">Come to Light Side</a>
      {{else}}
      <a href="/profile/dark-mode">Come to Dark Side</a>
      {{/if}}

    </div>

  </div>

</div>

{{/with}}